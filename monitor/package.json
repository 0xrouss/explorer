{
  "name": "intent-monitor",
  "version": "1.0.0",
  "description": "Intent monitoring system for Arcana networks",
  "type": "commonjs",
  "scripts": {
    "monitor": "npx tsx index.ts",
    "monitor:folly": "npx tsx index.ts --network FOLLY",
    "monitor:cerise": "npx tsx index.ts --network CERISE",
    "monitor:fast": "npx tsx index.ts --interval 2000",
    "monitor:sync": "npx tsx index.ts --sync",
    "monitor:status": "npx tsx index.ts --status",
    "monitor:stats": "npx tsx index.ts --stats",
    "monitor:health": "npx tsx index.ts --health",
    "monitor:help": "npx tsx index.ts --help"
  },
  "dependencies": {
    "pg": "^8.16.3",
    "dotenv": "^17.2.3"
  },
  "devDependencies": {
    "@types/pg": "^8.15.5",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  }
}
